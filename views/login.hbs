<!DOCTYPE html>
<html>

<head>
    <style>
        {{style}}
    </style>
    <link rel="stylesheet" href="stylesheets/login.css">
</head>

<body>
    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
            <div id="home" class="admin">
                <a href="/">
                    <div><button class="btn btn-dark" type="button">Home</button></div>
                </a>
            </div>
            <div id="admin" class="admin">
                <a href="/admin">
                    <div><button class="btn btn-dark" type="button">Admin login</button></div>
                </a>
            </div>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-7 d-flex align-items-center ml-5">
                                <div class="card-body p-4 p-lg-5 text-black ml-5">

                                    <form action={{action}} method="POST">


                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">{{head}}</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="form2Example17"
                                                class="form-control form-control-lg" name="email"/>
                                            <label class="form-label" for="form2Example17">Email address</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example27"
                                                class="form-control form-control-lg" name="password" />
                                            <label class="form-label" for="form2Example27">Password</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>

                                        <p id="reg" class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account?
                                            <a href="/signup" style="color: #393f81;">Register here</a>
                                        </p>
                                        <p id="errMsg" class="mb-5 pb-lg-2 text-danger" >{{errMsg}}</p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>